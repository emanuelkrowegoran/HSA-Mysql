<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".login.app.AppController"
        android:allowBackup="true"
        android:icon="@drawable/ikon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity
            android:name=".Splash"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".login.activity.LoginActivity"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".login.activity.RegisterActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".login.activity.HomeActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop" />

        <activity android:name=".form.ListActivity" />
        <activity
            android:name=".form.MainActivity"
            android:parentActivityName=".form.ListActivity" />
        <activity android:name=".form.DetailData"
            android:parentActivityName=".form.ListActivity" />
        <activity android:name=".form.EditActivity"
            android:parentActivityName=".form.ListActivity" ></activity>
    </application>
</manifest>